# Directory to read outputs from (read-only)
COMFY_OUTPUT_DIR=/var/lib/comfyui/output

# Working directory where favorites/moves/folders are stored
DATA_DIR=~/comfy_viewer/data

# Server port (production)
PORT=8008

# Auto-sync interval (milliseconds). 0 disables.
SYNC_INTERVAL_MS=0

# ComfyUI API endpoint used for workflow execution.
COMFY_API_URL=http://127.0.0.1:8188

# Thumbnail settings
THUMB_MAX=512
THUMB_QUALITY=72

# Optional root for mock sandbox mode (used by `npm run mock:seed` / `npm run dev:mock`)
MOCK_DEV_ROOT=.mock-dev
